<!-- Inside level -->
  <cell id="10" universe="1" fill="2"         surfaces="-10"    />
  <cell id="11" universe="1" material="fuel"  surfaces=" 10 -11"/>
  <cell id="12" universe="1" material="fuel"  surfaces=" 11 -12"/>
  <cell id="13" universe="1" material="fuel"  surfaces=" 12"    />     

<!-- Another level -->
  <cell id="100" universe="2" material="fuel"  surfaces="-100"     />
  <cell id="101" universe="2" material="fuel"  surfaces=" 100 -101"/>
  <cell id="102" universe="2" material="fuel"  surfaces=" 101 -102"/>
  <cell id="103" universe="2" material="fuel"  surfaces=" 102"     />  

</geometry>
