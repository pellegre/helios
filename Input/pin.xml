<?xml version="1.0"?>

<!-- Simple pin. -->
 
<geometry>

<!-- Defition of Surfaces -->
  <surface id="1"   type="cz" coeffs="0.2"   />
  <surface id="2"   type="cz" coeffs="0.3"   />
  <surface id="3"   type="cz" coeffs="0.5"   />
  <surface id="10"  type="cz" coeffs="0.02"  />
  <surface id="11"  type="cz" coeffs="0.08 "  />
  <surface id="12"  type="cz" coeffs="0.15"  />
  <surface id="100" type="cz" coeffs="0.002" />
  <surface id="101" type="cz" coeffs="0.008" />
  <surface id="102" type="cz" coeffs="0.015" />

<!-- External cells -->
  <cell id="1" fill="1"         surfaces="-1"   />
  <cell id="2" material="clad"  surfaces=" 1 -2"/>
  <cell id="3" material="water" surfaces=" 2 -3"/>
