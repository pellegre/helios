<?xml version="1.0"?>

<!-- Simple 2x2 lattice of identical pin cells. Each lattice cell is 2cm x 2cm
and each pin has a radius of 0.8.
-->

<geometry>

<!-- Defition of Surfaces -->
  <surface id="1" type="px" coeffs="-2.0" />
  <surface id="2" type="px" coeffs=" 0.0" />
  <surface id="3" type="px" coeffs=" 2.0" />
  <surface id="4" type="py" coeffs="-2.0" />
  <surface id="5" type="py" coeffs=" 0.0" />
  <surface id="6" type="py" coeffs=" 2.0" />

<!-- Squares cells -->
  <cell id="1" fill="1" translation="-1.0  1.0  0.0" surfaces=" 1 -2  5 -6"/> 
  <cell id="2" fill="1" translation="-1.0 -1.0  0.0" surfaces=" 1 -2 -5  4"/>
  <cell id="3" fill="1" translation=" 1.0  1.0  0.0" surfaces=" 2 -3  5 -6"/>
  <cell id="4" fill="1" translation=" 1.0 -1.0  0.0" surfaces=" 2 -3 -5  4"/>
  <cell id="5" type="negated,dead"      surfaces="-1  3 -4  6"/>

<!-- Pin -->
  <surface id="10" type="cz" coeffs=" 0.7" />    
  <surface id="11" type="cz" coeffs=" 0.8" />    
  <cell id="100" universe="1" material="fuel" surfaces="-10"/>
  <cell id="101" universe="1" material="clad" surfaces=" 10 -11"/>
  <cell id="102" universe="1" material="water" surfaces=" 11"/>


</geometry>
